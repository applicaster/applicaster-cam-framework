<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_reset_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/container_toolbar"
        layout="@layout/layout_toolbar_template"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height" />

    <com.applicaster.util.ui.CustomTextView
        android:id="@+id/tv_reset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/password_reset_title_margin_top"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Reset Password" />

    <com.applicaster.util.ui.CustomTextView
        android:id="@+id/tv_reset_title_desc"
        android:layout_width="@dimen/password_reset_desc_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/password_reset_desc_margin_top"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:maxLines="2"
        android:text="Type in you e-mail so we would send you the new password" />

    <ScrollView
        android:id="@+id/container_scrollable_reset_input"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_linear_reset_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/password_reset_input_fields_margin_top"
                android:gravity="center_horizontal"
                android:orientation="vertical" />

            <com.applicaster.util.ui.CustomButton
                android:id="@+id/btn_reset"
                style="@style/EditTextAuthInput"
                android:layout_marginTop="@dimen/auth_text_margin"
                android:text="RESTORE" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>