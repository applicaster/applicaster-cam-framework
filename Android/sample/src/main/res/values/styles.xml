<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!-- Default style for text -->
    <style name="DefaultTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <!-- end Default style for text -->

    <!-- Common screen styles -->
    <style name="Action_button_text">
        <item name="customtypeface">sf_pro_display_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Screen_title_text">
        <item name="customtypeface">sf_pro_display_bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Screen_description_text">
        <item name="customtypeface">sf_pro_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Alert_title">
        <item name="customtypeface">sf_pro_display_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Alert_description">
        <item name="customtypeface">sf_pro_display_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="alert_button_text">
        <item name="customtypeface">sf_pro_display_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Link_text">
        <item name="customtypeface">sf_pro_display_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- end common screens styles -->

    <!-- Payment options screen styles -->
    <style name="storefront_screen_hint_desc">
        <item name="customtypeface">sf_pro_display_light</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="storefront_screen_hint_action">
        <item name="customtypeface">sf_pro_display_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="storefront_title_text">
        <item name="customtypeface">sf_pro_display_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorCustomBlack</item>
    </style>
    <style name="storefront_details_text">
        <item name="customtypeface">sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorCustomBlack</item>
    </style>
    <style name="storefront_redeem_text">
        <item name="customtypeface">sf_pro_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorCustomBlack</item>
    </style>
    <style name="storefront_button_text">
        <item name="customtypeface">sf_pro_display_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- end Payment options screen styles-->

    <!-- Auth screens styles -->
    <style name="Restore_password_text">
